@model HomeBook.Models.Admin

@{
    ViewData["Title"] = "Xóa quản trị viên";
    Layout = "~/Areas/AdminHomeBook/Views/Shared/Admin.cshtml";
}

<div class="">
    <h1 class="mb-4 text-danger"><i class="bi bi-trash-fill me-2"></i> Xóa quản trị viên</h1>

    <h3 class="alert alert-danger"><i class="bi bi-exclamation-triangle-fill me-2"></i> Bạn có chắc chắn muốn xóa quản trị viên này?</h3>

    <hr class="border-danger mb-4" />

    <div>
        <dl class="row">
            <dt class="col-sm-3 fw-bold"><i class="bi bi-person-fill me-2"></i> Tên đăng nhập</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Username)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-key-fill me-2"></i> Mật khẩu</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Password)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-person-circle me-2"></i> Họ và tên</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-envelope-fill me-2"></i> Email</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-telephone-fill me-2"></i> Điện thoại</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="AdminId" />
            <button type="submit" class="btn btn-danger"><i class="bi bi-trash-fill me-2"></i> Xóa</button>
            <a asp-action="Index" class="btn btn-secondary ms-2"><i class="bi bi-arrow-left-circle-fill me-2"></i> Quay lại danh sách</a>
        </form>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<style>
    .text-danger {
        color: #fb5353 !important;
    }

    .border-danger {
        border-color: #fb5353 !important;
        border-width: 2px;
    }

    .btn-danger {
        background-color: #fb5353;
        border-color: #fb5353;
    }

        .btn-danger:hover {
            background-color: #d94242;
            border-color: #d94242;
        }
</style>