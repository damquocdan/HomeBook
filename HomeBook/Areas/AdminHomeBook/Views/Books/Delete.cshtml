@model HomeBook.Models.Book

@{
    ViewData["Title"] = "Xóa sách";
    Layout = "~/Areas/AdminHomeBook/Views/Shared/Admin.cshtml";
}

<div>
    <h1 class="mb-4 text-danger"><i class="bi bi-trash-fill me-2"></i> Xóa sách</h1>

    <h3 class="alert alert-danger"><i class="bi bi-exclamation-triangle-fill me-2"></i> Bạn có chắc chắn muốn xóa sách này?</h3>

    <hr class="border-danger mb-4" />

    <div>
        <dl class="row">
            <dt class="col-sm-3 fw-bold"><i class="bi bi-bookmark-fill me-2"></i> Tên sách</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.BookTitle)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-pen-fill me-2"></i> Tác giả</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Author)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-file-earmark-richtext-fill me-2"></i> Mô tả</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-cash-coin me-2"></i> Giá</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-box-seam-fill me-2"></i> Số lượng tồn kho</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.StockQuantity)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-cart-fill me-2"></i> Số lượng đã đặt</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.OrderedQuantity)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-check-circle-fill me-2"></i> Trạng thái</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-image-fill me-2"></i> URL ảnh bìa</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CoverImageUrl)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-tag-fill me-2"></i> Danh mục</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.CategoryId)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-building-fill me-2"></i> Nhà xuất bản</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Publisher.PublisherId)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="BookId" />
            <button type="submit" class="btn btn-danger"><i class="bi bi-trash-fill me-2"></i> Xóa</button>
            <a asp-action="Index" class="btn btn-secondary ms-2"><i class="bi bi-arrow-left-circle-fill me-2"></i> Quay lại danh sách</a>
        </form>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<style>
    .text-danger {
        color: #fb5353 !important;
    }

    .border-danger {
        border-color: #fb5353 !important;
        border-width: 2px;
    }

    .btn-danger {
        background-color: #fb5353;
        border-color: #fb5353;
    }

        .btn-danger:hover {
            background-color: #d94242;
            border-color: #d94242;
        }
</style>