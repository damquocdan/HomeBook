@model HomeBook.Models.Order

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "~/Areas/AdminHomeBook/Views/Shared/Admin.cshtml";
}

<div>
    <h1 class="mb-4 text-danger"><i class="bi bi-info-circle-fill me-2"></i> Chi tiết đơn hàng</h1>

    <hr class="border-danger mb-4" />

    <div>
        <dl class="row">
            <dt class="col-sm-3 fw-bold"><i class="bi bi-calendar-date-fill me-2"></i> Ngày đặt hàng</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.OrderDate)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-cash-coin me-2"></i> Tổng tiền</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.TotalAmount)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-check-circle-fill me-2"></i> Trạng thái</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-person-fill me-2"></i> Khách hàng</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Customer.FullName)</dd>
        </dl>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-secondary ms-2"><i class="bi bi-arrow-left-circle-fill me-2"></i> Quay lại danh sách</a>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<style>
    .text-danger {
        color: #fb5353 !important;
    }

    .border-danger {
        border-color: #fb5353 !important;
        border-width: 2px;
    }

    .btn-warning {
        background-color: #ffc107; /* Giữ màu vàng mặc định của Bootstrap warning */
        border-color: #ffc107;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
        }
</style>