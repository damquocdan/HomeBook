@model HomeBook.Models.Contact

@{
    ViewData["Title"] = "Chi tiết liên hệ";
    Layout = "~/Areas/AdminHomeBook/Views/Shared/Admin.cshtml";
}

<div>
    <h1 class="mb-4 text-danger"><i class="bi bi-info-circle-fill me-2"></i> Chi tiết liên hệ</h1>

    <hr class="border-danger mb-4" />

    <div>
        <dl class="row">
            <dt class="col-sm-3 fw-bold"><i class="bi bi-person-fill me-2"></i> Tên</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-envelope-at-fill me-2"></i> Email</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-telephone-fill me-2"></i> Điện thoại</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-chat-left-text-fill me-2"></i> Tiêu đề</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Subject)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-chat-right-dots-fill me-2"></i> Nội dung</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Message)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-calendar-event-fill me-2"></i> Ngày gửi</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>
        </dl>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-secondary ms-2"><i class="bi bi-arrow-left-circle-fill me-2"></i> Quay lại danh sách</a>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<style>
    .text-danger {
        color: #fb5353 !important;
    }

    .border-danger {
        border-color: #fb5353 !important;
        border-width: 2px;
    }

    .btn-warning {
        background-color: #ffc107; /* Giữ màu vàng mặc định của Bootstrap warning */
        border-color: #ffc107;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
        }
</style>