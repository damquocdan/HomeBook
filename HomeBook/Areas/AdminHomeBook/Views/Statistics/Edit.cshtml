@model HomeBook.Models.Statistic

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/AdminHomeBook/Views/Shared/Admin.cshtml";
}

<h1>Edit</h1>

<h4>Statistic</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
