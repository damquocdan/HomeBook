@model HomeBook.Areas.AdminHomeBook.Models.Login
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><i class="bi bi-key-fill me-2"></i> Đăng nhập Admin - HomeBook</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body.login-page {
            background-color: #f4f6f9;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
        }

        .login-box {
            width: 100%;
            max-width: 400px;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .login-title {
            text-align: center;
            font-size: 24px;
            margin-bottom: 20px;
            color: #fb5353;
            font-weight: bold;
        }

        .custom-input {
            margin-bottom: 15px;
            border-radius: 5px;
            border: 1px solid #ced4da;
            padding: 12px;
            font-size: 16px;
        }

            .custom-input:focus {
                border-color: #fb5353;
                box-shadow: 0 0 0 0.25rem rgba(251, 83, 83, 0.25);
            }

        .btn-primary {
            background-color: #fb5353;
            border-color: #fb5353;
            width: 100%;
            padding: 12px;
            font-size: 18px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #d94242;
                border-color: #d94242;
            }

        .alert-danger {
            background-color: #fdecea;
            border-color: #fcc2c3;
            color: #a94442;
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 5px;
            list-style: none;
            padding-left: 20px;
        }
    </style>
</head>
<body class="login-page">

    <div class="login-box">
        <div class="login-title"><i class="bi bi-book-fill me-2"></i> Đăng nhập Admin</div>
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger mt-3">
                <ul>
                    @foreach (var modelState in ViewData.ModelState.Values)
                    {
                        foreach (var error in modelState.Errors)
                        {
                            <li><i class="bi bi-exclamation-triangle-fill me-2"></i> @error.ErrorMessage</li>
                        }
                    }
                </ul>
            </div>
        }
        <form asp-action="Index" method="post">
            <div class="mb-3">
                <label for="Email" class="form-label"><i class="bi bi-envelope-fill me-2"></i> Email</label>
                <input asp-for="Email" type="email" class="custom-input form-control form-control-lg"
                       placeholder="Nhập email" id="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Password" class="form-label"><i class="bi bi-key-fill me-2"></i> Mật khẩu</label>
                <input asp-for="Password" type="password" class="custom-input form-control form-control-lg"
                       placeholder="Nhập mật khẩu" id="Password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary"><i class="bi bi-box-arrow-in-right me-2"></i> Đăng nhập</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>