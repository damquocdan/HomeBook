@model HomeBook.Models.Review

@{
    ViewData["Title"] = "Chỉnh sửa đánh giá";
    Layout = "~/Areas/AdminHomeBook/Views/Shared/Admin.cshtml";
}

<div class="container mt-4">
    <h1 class="mb-4 text-danger"><i class="bi bi-pencil-square-fill me-2"></i> Chỉnh sửa đánh giá</h1>

    <hr class="border-danger mb-4" />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ReviewId" />

                <div class="mb-3">
                    <label asp-for="CustomerId" class="form-label"><i class="bi bi-person-fill me-2"></i> Khách hàng</label>
                    <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BookId" class="form-label"><i class="bi bi-book-fill me-2"></i> Sách</label>
                    <select asp-for="BookId" class="form-control" asp-items="ViewBag.BookId"></select>
                    <span asp-validation-for="BookId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Rating" class="form-label"><i class="bi bi-star-half me-2"></i> Đánh giá</label>
                    <input asp-for="Rating" class="form-control" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Comment" class="form-label"><i class="bi bi-chat-left-text-fill me-2"></i> Bình luận</label>
                    <textarea asp-for="Comment" class="form-control"></textarea>
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CreatedAt" class="form-label"><i class="bi bi-calendar-event-fill me-2"></i> Ngày tạo</label>
                    <input asp-for="CreatedAt" class="form-control" />
                    <span asp-validation-for="CreatedAt" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-danger"><i class="bi bi-save-fill me-2"></i> Lưu</button>
                    <a asp-action="Index" class="btn btn-secondary ms-2"><i class="bi bi-arrow-left-circle-fill me-2"></i> Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<style>
    .btn-danger {
        background-color: #fb5353;
        border-color: #fb5353;
    }

        .btn-danger:hover {
            background-color: #d94242;
            border-color: #d94242;
        }

    .border-danger {
        border-color: #fb5353 !important;
        border-width: 2px;
    }

    .text-danger {
        color: #fb5353 !important;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}