@model IEnumerable<HomeBook.Models.Publisher>

@{
    ViewData["Title"] = "Danh sách nhà xuất bản";
    Layout = "~/Areas/AdminHomeBook/Views/Shared/Admin.cshtml";
}

<div>
    <h1 class="mb-4 text-danger"><i class="bi bi-building-fill me-2"></i> Danh sách nhà xuất bản</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-square-fill me-2"></i> Thêm mới</a>
    </p>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="bg-danger text-white">
                <tr>
                    <th>
                        <i class="bi bi-fonts me-2"></i> @Html.DisplayNameFor(model => model.PublisherName)
                    </th>
                    <th>
                        <i class="bi bi-person-fill me-2"></i> @Html.DisplayNameFor(model => model.ContactPerson)
                    </th>
                    <th>
                        <i class="bi bi-envelope-fill me-2"></i> @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        <i class="bi bi-telephone-fill me-2"></i> @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th>
                        <i class="bi bi-house-fill me-2"></i> @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th class="text-center"><i class="bi bi-gear-fill me-2"></i> Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PublisherName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactPerson)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.PublisherId" class="btn btn-sm btn-warning"><i class="bi bi-pencil-square me-1"></i> Sửa</a>
                            <a asp-action="Details" asp-route-id="@item.PublisherId" class="btn btn-sm btn-info ms-2"><i class="bi bi-info-circle-fill me-1"></i> Chi tiết</a>
                            <a asp-action="Delete" asp-route-id="@item.PublisherId" class="btn btn-sm btn-danger ms-2"><i class="bi bi-trash-fill me-1"></i> Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<style>
    .btn-primary {
        background-color: #fb5353;
        border-color: #fb5353;
    }

        .btn-primary:hover {
            background-color: #d94242;
            border-color: #d94242;
        }

    .bg-danger {
        background-color: #fb5353 !important;
    }

    .text-danger {
        color: #fb5353 !important;
    }
</style>