@model HomeBook.Models.Publisher

@{
    ViewData["Title"] = "Chi tiết nhà xuất bản";
    Layout = "~/Areas/AdminHomeBook/Views/Shared/Admin.cshtml";
}

<div>
    <h1 class="mb-4 text-danger"><i class="bi bi-building-fill me-2"></i> Chi tiết nhà xuất bản</h1>

    <hr class="border-danger mb-4" />

    <div>
        <dl class="row">
            <dt class="col-sm-3 fw-bold"><i class="bi bi-fonts me-2"></i> Tên nhà xuất bản</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.PublisherName)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-person-fill me-2"></i> Người liên hệ</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ContactPerson)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-envelope-fill me-2"></i> Email</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-telephone-fill me-2"></i> Điện thoại</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-house-fill me-2"></i> Địa chỉ</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>
        </dl>
    </div>

    <div>
        <a asp-action="Edit" asp-route-id="@Model?.PublisherId" class="btn btn-warning"><i class="bi bi-pencil-square-fill me-2"></i> Sửa</a>
        <a asp-action="Index" class="btn btn-secondary ms-2"><i class="bi bi-arrow-left-circle-fill me-2"></i> Quay lại danh sách</a>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<style>
    .text-danger {
        color: #fb5353 !important;
    }

    .border-danger {
        border-color: #fb5353 !important;
        border-width: 2px;
    }

    .btn-warning {
        background-color: #ffc107; /* Giữ màu vàng mặc định của Bootstrap warning */
        border-color: #ffc107;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
        }
</style>