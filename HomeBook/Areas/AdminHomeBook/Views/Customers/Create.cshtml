@model HomeBook.Models.Customer

@{
    ViewData["Title"] = "Tạo mới khách hàng";
    Layout = "~/Areas/AdminHomeBook/Views/Shared/Admin.cshtml";
}

<div>
    <h1 class="mb-4 text-danger"><i class="bi bi-person-plus-fill me-2"></i> Tạo mới khách hàng</h1>

    <hr class="border-danger mb-4" />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Username" class="form-label"><i class="bi bi-person-circle me-2"></i> Tên đăng nhập</label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"><i class="bi bi-key-fill me-2"></i> Mật khẩu</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FullName" class="form-label"><i class="bi bi-person-vcard-fill me-2"></i> Họ và tên</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"><i class="bi bi-envelope-fill me-2"></i> Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Phone" class="form-label"><i class="bi bi-telephone-fill me-2"></i> Điện thoại</label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label"><i class="bi bi-house-fill me-2"></i> Địa chỉ</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Avatar" class="form-label"><i class="bi bi-person-bounding-box me-2"></i> Ảnh đại diện</label>
                    <input asp-for="Avatar" class="form-control" />
                    <span asp-validation-for="Avatar" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-danger"><i class="bi bi-person-plus-fill me-2"></i> Tạo mới</button>
                    <a asp-action="Index" class="btn btn-secondary ms-2"><i class="bi bi-arrow-left-circle-fill me-2"></i> Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<style>
    .btn-danger {
        background-color: #fb5353;
        border-color: #fb5353;
    }

        .btn-danger:hover {
            background-color: #d94242;
            border-color: #d94242;
        }

    .border-danger {
        border-color: #fb5353 !important;
        border-width: 2px;
    }

    .text-danger {
        color: #fb5353 !important;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}