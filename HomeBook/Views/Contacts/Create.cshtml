@model HomeBook.Models.Contact

@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .contat-from-wrapper input[type="text"], .contat-from-wrapper input[type="email"], .contat-from-wrapper textarea {
        width: 100%;
        display: block;
        outline: none;
        border-bottom: 1px solid #bbbbbb;
        background-color: inherit;
        color: #404040;
        font-size: 21px;
        line-height: 23px;
        padding-bottom: 24px;
    }

        .contat-from-wrapper input[type="text"], .contat-from-wrapper input[type="email"]{
            height:52px;
        }
    .contat-from-wrapper input[type="submit"] {
        display: block;
        border: none;
        outline: none;
        width: 200px;
        line-height: 60px;
        text-transform: uppercase;
        font-size: 21px;
        color: #FFF;
        font-weight: 800;
        letter-spacing: 2px;
        background-color: #e84d49;
        margin: 41px auto;
        margin-bottom: 0;
    }
</style>
<div class="row">
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
        <article role="pge-title-content" class="contact-header">
            <header>
                <h2><span>HomeBook</span> Liên Hệ Với Chúng Tôi</h2>
            </header>
            <p>
                <a href="tel:+84912345678"><i class="fa fa-phone" aria-hidden="true"></i> +84 912 345 678</a>
                <a href="mailto:support@homebook.com"><i class="fa fa-envelope" aria-hidden="true"></i> support@homebook.com</a>
            </p>
        </article>
    </div>

    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
        <div class="demo-wrapper">
            <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d14140.557422285494!2d105.81728845!3d21.022198749999998!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e1!3m2!1svi!2s!4v1744864261040!5m2!1svi!2s" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="contat-from-wrapper">
        <div id="message"></div>
        <form asp-action="Create" method="post" id="cform">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-3 col-lg-3 col-sm-3 col-xs-6">
                    <input asp-for="Name" id="name" type="text" placeholder="Tên của bạn là gì?" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-3 col-lg-3 col-sm-3 col-xs-6">
                    <input asp-for="Email" id="email" type="email" placeholder="Email của bạn là gì?" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-md-3 col-lg-3 col-sm-3 col-xs-6">
                    <input asp-for="Phone" id="phone" type="text" placeholder="Số điện thoại của bạn?" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="col-md-3 col-lg-3 col-sm-3 col-xs-6">
                    <input asp-for="Subject" id="subject" type="text" placeholder="Chủ đề liên hệ" class="form-control" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
            </div>
            <div class="clearfix"></div>
            <textarea asp-for="Message" id="comments" cols="" rows="" placeholder="Bạn đang nghĩ gì?" class="form-control"></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
            <div class="clearfix"></div>
            <input type="submit" value="Gửi tin nhắn" class="btn btn-primary">
            <div id="simple-msg"></div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}