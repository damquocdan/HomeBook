@model HomeBook.Models.Customer

@{
    ViewData["Title"] = "Thông tin cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="my-4 text-danger"><i class="bi bi-person-circle me-2"></i> Thông Tin Cá Nhân</h1>

    <div class="card border-danger">
        <div class="card-body">
            @if (Model == null)
            {
                <div class="alert alert-warning">
                    Không tìm thấy thông tin khách hàng.
                    <a asp-action="Index" class="text-danger">Quay lại</a>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-md-4 text-center">
                        <h5>Ảnh đại diện</h5>
                        @if (string.IsNullOrEmpty(Model.Avatar))
                        {
                            <img src="https://via.placeholder.com/150" alt="Avatar" class="img-fluid rounded-circle mb-3" style="width: 150px; height: 150px;" />
                        }
                        else
                        {
                            <img src="@Model.Avatar" alt="Avatar" class="img-fluid rounded-circle mb-3" style="width: 150px; height: 150px;" />
                        }
                    </div>
                    <div class="col-md-8">
                        <h5>Thông tin chi tiết</h5>
                        <div class="row mb-2">
                            <div class="col-sm-4"><strong>Tên đăng nhập:</strong></div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.Username)</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-4"><strong>Họ và tên:</strong></div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.FullName)</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-4"><strong>Email:</strong></div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.Email)</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-4"><strong>Số điện thoại:</strong></div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.Phone)</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-4"><strong>Địa chỉ:</strong></div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.Address)</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-4"><strong>Ngày tạo:</strong></div>
                            <div class="col-sm-8">@Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</div>
                        </div>
                    </div>
                </div>

                <div class="text-right mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-outline-danger">
                        <i class="bi bi-pencil-fill"></i> Chỉnh sửa
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        .text-danger {
            color: #fb5353 !important;
        }

        .border-danger {
            border-color: #fb5353 !important;
        }

        .btn-outline-danger {
            color: #fb5353;
            border-color: #fb5353;
        }

            .btn-outline-danger:hover {
                background-color: #fb5353;
                color: white;
            }

        .btn-outline-secondary {
            color: #6c757d;
            border-color: #6c757d;
        }

            .btn-outline-secondary:hover {
                background-color: #6c757d;
                color: white;
            }

        .img-fluid {
            max-width: 100%;
            height: auto;
        }

        .rounded-circle {
            border: 2px solid #fb5353;
        }
    </style>
